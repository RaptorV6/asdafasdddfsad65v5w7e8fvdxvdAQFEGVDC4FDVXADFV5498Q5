{block scripts}
{include parent}


{include date_filter_script}

<script type="text/javascript">
    $(document).ready(function() {
        registerBoxInfo();
    });
    
    function registerBoxInfo() {
        $('.box-info-area').mouseover(function() {
            $(this).find('.box-info').css('display', 'block');
        });
        $('.box-info-area').mouseout(function() {
            $(this).find('.box-info').css('display', 'none');
        });
        window.setTimeout(registerBoxInfo, 1000);
    }
</script>
{/block}

